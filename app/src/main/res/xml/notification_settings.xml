<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="hide_notification"
        android:title="@string/pref_title_hide_notification" />

    <ListPreference
        android:defaultValue="turn-off"
        android:entries="@array/pref_notification_action_list"
        android:entryValues="@array/pref_notification_action_list_values"
        android:key="notification_action_2"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_notification_action_2" />

    <ListPreference
        android:defaultValue="lock-device"
        android:entries="@array/pref_notification_action_list"
        android:entryValues="@array/pref_notification_action_list_values"
        android:key="notification_action"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_notification_action" />

    <Preference
        android:key="system_notification_settings"
        android:title="@string/system_notification_settings" >
    </Preference>

</PreferenceScreen>
